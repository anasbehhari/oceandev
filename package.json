{
  "name": "oceandev-hooks",
  "version": "1.0.6",
  "description": "A collection of custom React hooks",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "typecheck": "tsc --noEmit",
    "build": "npm run lint && prettier --write 'src/**/*.{ts,tsx}' && tsc",
    "lint": "npm run lint:eslint",
    "lint:eslint": "eslint . --ext .ts,.tsx --cache",
    "test": "npm run typecheck && npm run prettier && npm run lint  && npm run build",
    "prettier": "prettier --check \"**/*.{ts,tsx}\"",
    "prettier:write": "prettier --write \"**/*.{ts,tsx}\""
  },
  "keywords": [
    "react",
    "hooks",
    "typescript"
  ],
  "author": "Anas BEHHARI",
  "license": "MIT",
  "files": [
    "dist"
  ],
  "dependencies": {
    "react": "^17.0.2"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.24.6",
    "@babel/preset-react": "^7.24.6",
    "@babel/preset-typescript": "^7.24.6",
    "@testing-library/dom": "^9.3.4",
    "@testing-library/jest-dom": "^6.4.2",
    "@types/react": "^18.3.3",
    "@typescript-eslint/eslint-plugin": "^7.2.0",
    "@typescript-eslint/parser": "^7.2.0",
    "eslint": "^8.57.0",
    "eslint-config-airbnb": "19.0.4",
    "eslint-config-airbnb-typescript": "^18.0.0",
    "eslint-config-mantine": "3.2.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsx-a11y": "^6.8.0",
    "eslint-plugin-react": "^7.34.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "prettier": "^3.2.5",
    "prettier-eslint": "^16.3.0",
    "stylelint": "^16.2.1",
    "typescript": "^4.3.5"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/anasbehhari/oceandev-hooks.git"
  },
  "homepage": "https://github.com/anasbehhari/oceandev-hooks.git",
  "packageManager": "yarn@4.2.2"
}
